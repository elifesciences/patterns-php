{
    "name": "elife/patterns",
    "description": "eLife patterns",
    "type": "library",
    "license": "GPL-3.0+",
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "eLife\\Patterns\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\eLife\\Patterns\\": "./tests/src"
        }
    },
    "require": {
        "php": "^7.0",
        "beberlei/assert": "^2.0",
        "mustache/mustache": "^2.5",
        "puli/composer-plugin": "^1.0-beta9",
        "puli/repository": "^1.0-beta9",
        "puli/cli": "^1.0@beta"
    },
    "require-dev": {
        "cpliakas/git-wrapper": "^1.0",
        "justinrainbow/json-schema": "^1.6",
        "php-jsonpointer/php-jsonpointer": "^1.0",
        "phpunit/phpunit": "^5.2",
        "phpspec/prophecy": "^1.5",
        "symfony/filesystem": "^3.0",
        "symfony/finder": "^3.0",
        "symfony/process": "^3.0",
        "symfony/yaml": "^3.1"
    },
    "scripts": {
        "test": "phpunit",
        "update-patterns": "./bin/update"
    },
    "minimum-stability": "beta",
    "prefer-stable": true
}
