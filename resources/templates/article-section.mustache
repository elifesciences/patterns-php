<section
    class="article-section {{#isFirst}}article-section--first{{/isFirst}}"
  {{#id}} id="{{id}}"{{/id}}
  {{#hasBehaviour}}data-behaviour="ArticleSection"{{/hasBehaviour}}
  {{#isInitiallyClosed}}data-initial-state="closed"{{/isInitiallyClosed}}
>

  <header class="article-section__header">
    <h{{headingLevel}} class="article-section__header_text">{{{title}}}</h{{headingLevel}}>
    {{#headerLink}}
      <a href="{{{href}}}" class="article-section__header_link">{{text}}</a>
    {{/headerLink}}
  </header>

  <div class="article-section__body">
    {{^showCharts}}
      {{{body}}}
    {{/showCharts}}

    {{#chart}}
      {{>resources/templates/bar-chart}}
    {{/chart}}

    {{#showCharts}}
      {{>resources/templates/statistic-collection}}
    {{/showCharts}}

    {{#doi}}
      {{> resources/templates/doi}}
    {{/doi}}
  </div>

</section>
